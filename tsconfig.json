{
  "compilerOptions": {
    "plugins": [
      {
        "name": "tslint-language-service-ts3",
        "ignoreDefinitionFiles": true
      }
    ],
    "strict": true,
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts"]
}
